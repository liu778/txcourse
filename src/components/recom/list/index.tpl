<li class="course-recom-item">
    <div class="itemImg">
        <a href="https://ke.qq.com.course/{{id}}" title="{{itemTitle}}" target="_black">
            <img src="{{imgSrc}}" alt="{{itemTitle}}">
        </a>
    </div>
    <div class="item-info">
        <a class="item-title" href="https://ke.qq.com.course/{{id}}" title="{{itemTitle}}" target="_black">
            <h3>{{itemTitle}}</h3>
        </a>
        <div class="item-info-warp">
            <p>{{courseInfo}}</p>
            <div class="teacher-info">
                <img src="{{teacherImg}}" alt="{{teacherName}}">
                <span>{{teacherName}}</span>
                <i></i>
                <span>{{status}}人购买</span>
            </div>
        </div>
       <p class="item-price">￥{{price}} <span class="{{isShow}}">{{bfprice}}</span></p>
       <div class="item-btn">
           <a href="https://ke.qq.com.course/{{id}}" title="{{itemTitle}}" target="_black">
               <span class="btn-primary">立即报名</span>
           </a>
       </div>
    </div>
</li>