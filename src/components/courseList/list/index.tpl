<li class="card-item" data-field = "{{field}}">
    <a href="https://ke.qq.com/course/{{id}}" target="_black">
        <img src="{{imgSrc}}" alt="{{courseName}}">
    </a>
    <div class="item-status">
        <span class="item-status-step">随到随学</span>
    </div>
    <h4 class="item-tt">
        <a href="https://ke.qq.com/course/{{id}}" target="_blank" class="item-tt-lk" title="{{courseName}}" >
            {{courseName}}
        </a>
    </h4>
    <div class="item-line">
        <span class="line-cell {{priceStyle}}">
            {{price}}
        </span>
        <i class="icon-can-try"></i>
        <span class="line-cell item-user item-user--right">
             {{status}}人购买
        </span>
    </div>
</li>